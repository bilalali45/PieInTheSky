<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/lyMainOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvAmount"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/container_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <pk.com.Taj.app.widget.IconTextView
                    android:id="@+id/btnPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="5dp"
                    android:text="@string/fa_plus_circle_solid"
                    android:textColor="#444e5e"
                    android:textSize="20sp"
                    app:solid_icon="true">

                </pk.com.Taj.app.widget.IconTextView>

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="#444e5e"
                    android:textSize="16sp" />

                <pk.com.Taj.app.widget.IconTextView
                    android:id="@+id/btnMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="5dp"
                    android:text="@string/fa_minus_circle_solid"
                    android:textColor="#444e5e"
                    android:textSize="20sp"
                    app:solid_icon="true">

                </pk.com.Taj.app.widget.IconTextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDishName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dish Name"
                    android:textColor="#444e5e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvDishPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 22.22"
                    android:textColor="#a9b1be"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="RS. 500"
            android:textColor="#444e5e"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <View
        android:id="@+id/view_line_end"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6" />


</LinearLayout>