<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <pk.com.pieinthesky.app.widget.RoundCornerImageView
        android:id="@+id/ivDishImage"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dish_image"
        app:image_radius="6dp" />

    <TextView
        android:id="@+id/tvDishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ivDishImage"
        android:layout_toLeftOf="@id/ivAdd"
        android:fontFamily="?fontFamilyMedium"
        android:text="Dish Name"
        android:textColor="#444e5e"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tvDishPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDishName"
        android:layout_toRightOf="@id/ivDishImage"
        android:layout_marginTop="5dp"
        android:text="Rs. 500"
        android:textColor="#444e5e"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ivAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/add_cart"/>

</RelativeLayout>