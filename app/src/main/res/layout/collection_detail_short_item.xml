<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <pk.com.Taj.app.widget.RoundCornerImageView
        android:id="@+id/ivCollectionImage"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@drawable/res_image"
        app:image_radius="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/layout_collection_item_transparent"

        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="10dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/tvCollectionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="?fontFamilyMedium"
            android:singleLine="true"
            android:text="Title"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvCollectionPlaces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="?fontFamilyMedium"
            android:singleLine="true"
            android:text="Title"
            android:textColor="#cfcfcf"
            android:textSize="16sp" />
    </LinearLayout>


</RelativeLayout>